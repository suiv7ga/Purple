---
interface Props {
    imgURL: string;
    title: string;
    description: string;
}
const { imgURL, title, description } = Astro.props;
---

<div class="inicio">
    <img src={imgURL} alt={title} class="img" />
    <div class="little">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
    <div class="little">
        <button class="button">Learn More</button>
    </div>
</div>

<style>
    .button {
        background-color: rgb(49, 49, 49);
        border-radius: 10px;
        font-weight: 700;
        padding: 8px 20px;
        color: white;

        transition: background 0.3s ease-in;

    }
    .button:hover{
        background-color: #616161;;
    }
    .img {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }
    .little {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        padding: 15px;
        flex-grow: 1;
    }
    .inicio {
        background-color:#e7e7e7;
        border: solid;
        border-color: transparent;

        transition: all 0.3s ease-in;
    }
    .inicio:hover{
        transform: scale(1.1);
    }
</style>
