---
interface Props {
    title: string;
    sub: string;
    tag: string;
    imgURL: string;
}
const { title, sub, tag, imgURL } = Astro.props;
---

<div class="inicio">
    <div>
        <img src={imgURL} alt={title} class="img" />
    </div>
    <div class="looks">
        <p class="focus">{sub}</p>
        <h3>{title}</h3>
        <p>{tag}</p>
    </div>
</div>

<style>
    .img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 10px;
    }
    .focus{
        color: white;
        background-color: rgb(49, 49, 49);
        border: 2px solid rgb(49, 49, 49);
        border-radius: 20px;
        padding: 1px 20px;}

    .inicio{
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 30px;
        background-color: #e7e7e7;
        border:solid;
        border-color: transparent;
        border-width: 1em;

        
    
    }
    .looks{
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 70px;
        flex-grow: 1;
        font-size: x-large;
        text-align: center;
    }
        
        

        
</style>
